# ephishchk Configuration
# Copy this file to .env and update values

# Application Settings
APP_NAME=ephishchk
APP_ENV=development
APP_DEBUG=true
APP_TIMEZONE=UTC

# Security
SECURE_COOKIES=false
ENCRYPTION_KEY=change-this-to-a-random-32-character-string

# Database Configuration
DB_DRIVER=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=ephishchk
DB_USERNAME=root
DB_PASSWORD=

# DNS Cache TTL (seconds)
DNS_CACHE_TTL=300

# Maximum email size (bytes) - default 10MB
MAX_EMAIL_SIZE=10485760

# Maximum attachment size for VT upload (bytes) - default 32MB
MAX_ATTACHMENT_SIZE=33554432
