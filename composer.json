{
    "name": "ephishchk/ephishchk",
    "description": "PHP Email Phishing Checker - Analyzes emails for phishing indicators",
    "type": "project",
    "license": "MIT",
    "require": {
        "php": ">=8.1",
        "zbateson/mail-mime-parser": "^2.4",
        "vlucas/phpdotenv": "^5.6"
    },
    "autoload": {
        "psr-4": {
            "Ephishchk\\": "src/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "scripts": {
        "post-install-cmd": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ]
    }
}
